<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp15"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/tv_system_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dp3"
        android:textColor="@color/color_ff323232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="start|center_horizontal"
        android:textSize="@dimen/sp14"
        android:maxLines="2"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/title_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_system_title"
        />
    <TextView
        android:id="@+id/tv_system_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_barrier"
        android:layout_marginStart="@dimen/dp5"
        android:layout_marginTop="@dimen/dp5"
        android:textSize="@dimen/sp12" />
    <TextView
        android:id="@+id/tv_system_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp20"
        app:layout_constraintStart_toEndOf="@id/tv_system_time"
        app:layout_constraintTop_toBottomOf="@id/title_barrier"
        android:layout_marginTop="@dimen/dp5"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="@dimen/dp10"
        android:textSize="@dimen/sp12" />
    <TextView
        android:id="@+id/tv_system_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp12"
        android:layout_marginTop="@dimen/dp5"
        android:layout_marginStart="@dimen/dp5"
        app:layout_constraintStart_toEndOf="@id/tv_system_author"
        app:layout_constraintTop_toBottomOf="@id/title_barrier"
        />
</androidx.constraintlayout.widget.ConstraintLayout>