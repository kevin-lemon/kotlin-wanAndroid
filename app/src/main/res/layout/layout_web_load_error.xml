<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ic_web_error"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp150"
        android:src="@drawable/img_web_error"
        />
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="@dimen/dp150"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ic_web_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="@string/web_error"
        android:gravity="center"
        />
    <Button
        android:id="@+id/error_retry"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/btn_radius_bg"
        app:layout_constraintCircleRadius="@dimen/dp50"
        app:layout_constraintTop_toBottomOf="@id/tv_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/colorGray"
        android:text="@string/retry"
        />
</androidx.constraintlayout.widget.ConstraintLayout>